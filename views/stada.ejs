<%- include('header') -%>

<h1>Standings</h1>

<table>
  <thead>
    <tr>
      <th>Lið</th>
      <th>Sigrar</th>
      <th>Jafntefli</th>
      <th>Töp</th>
      <th>Stig</th>
    </tr>
  </thead>
  <tbody>
    <% for (const standing of locals.standings) { %>
      <tr>
        <td><%= standing.name %></td>
        <td><%= standing.wins %></td>
        <td><%= standing.draws %></td>
        <td><%= standing.losses %></td>
        <td><%= standing.points %></td>
      </tr>
    <% } %>
  </tbody>
</table>

<%- include('footer') -%>